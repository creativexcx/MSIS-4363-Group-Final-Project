@page
@model MSIS_4363_Group_Final_Project.Pages.Career_ResourcesModel
@{
}

<div class="header-section">
    <h1>Career Resources</h1>
    <p>Your guide to success in the job market</p>
</div>

<div class="container mt-5">

    <!-- Helpful Job Search Links -->
    <div class="section-title">
        <h3>Helpful Job Search Links</h3>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <img src="https://via.placeholder.com/150" class="card-img-top" alt="Job Search">
                <div class="card-body">
                    <h5 class="card-title">LinkedIn</h5>
                    <p class="card-text">A powerful networking tool to connect with professionals and find job opportunities.</p>
                    <a href="https://www.linkedin.com" class="btn btn-primary" target="_blank">Visit LinkedIn</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <img src="https://via.placeholder.com/150" class="card-img-top" alt="Job Search">
                <div class="card-body">
                    <h5 class="card-title">Indeed</h5>
                    <p class="card-text">Search millions of jobs, post your resume, and research companies.</p>
                    <a href="https://www.indeed.com" class="btn btn-primary" target="_blank">Visit Indeed</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <img src="https://via.placeholder.com/150" class="card-img-top" alt="Job Search">
                <div class="card-body">
                    <h5 class="card-title">Glassdoor</h5>
                    <p class="card-text">Find company reviews, salary information, and job listings.</p>
                    <a href="https://www.glassdoor.com" class="btn btn-primary" target="_blank">Visit Glassdoor</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Career Development Resources -->
    <div class="section-title mt-5">
        <h3>Career Development Resources</h3>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <img src="https://via.placeholder.com/150" class="card-img-top" alt="Career Tips">
                <div class="card-body">
                    <h5 class="card-title">Resume Building</h5>
                    <p class="card-text">Learn how to create a standout resume with these helpful guides and templates from OSU.</p>
                    <a href="https://go.okstate.edu/career-services/resume-tips.html" class="btn btn-primary" target="_blank">Visit OSU Resume Workshop</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <img src="https://via.placeholder.com/150" class="card-img-top" alt="Career Tips">
                <div class="card-body">
                    <h5 class="card-title">Interview Preparation</h5>
                    <p class="card-text">Get tips and tricks to prepare for interviews and stand out from the crowd.</p>
                    <a href="https://go.okstate.edu/career-services/interview-prep.html" class="btn btn-primary" target="_blank">Visit OSU Interview Prep</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <img src="https://via.placeholder.com/150" class="card-img-top" alt="Career Tips">
                <div class="card-body">
                    <h5 class="card-title">Networking Strategies</h5>
                    <p class="card-text">Build a strong professional network that helps you throughout your career.</p>
                    <a href="https://go.okstate.edu/career-services/networking-tips.html" class="btn btn-primary" target="_blank">Visit OSU Networking Tips</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Contact Us Section -->
    <div class="contact-box">
        <div class="section-title">
            <h3>Contact Us</h3>
        </div>
        <form action="#" method="POST">
            <div class="mb-3">
                <label for="name" class="form-label">Your Name</label>
                <input type="text" class="form-control" id="name" placeholder="Enter your name">
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Your Email</label>
                <input type="email" class="form-control" id="email" placeholder="Enter your email">
            </div>
            <div class="mb-3">
                <label for="message" class="form-label">Your Message</label>
                <textarea class="form-control" id="message" rows="4" placeholder="How can we help you?"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>

</div>
