<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MSIS_4363_Group_Final_Project</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MSIS_4363_Group_Final_Project.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="d-flex">
        <!-- Left Vertical Nav Bar -->
        <nav class="vertical-nav bg-light border-end">
            <h4 class="p-3">Cowboy Careers</h4>

            <ul class="nav flex-column px-2">

                <li class="nav-item">
                    <a class="nav-link active d-flex align-items-center" asp-page="/Index">
                        <img src="~/images/home-icon.png" class="nav-icon" />
                        <span class="ms-2">Home</span>
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link active d-flex align-items-center" asp-page="/Job_Search">
                        <img src="~/images/search-icon.png" class="nav-icon" />
                        <span class="ms-2">Job Search</span>
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link active d-flex align-items-center" asp-page="/CareerResources">
                        <img src="~/images/web-icon.png" class="nav-icon" />
                        <span class="ms-2">Career Resources</span>
                    </a>
                </li>

            </ul>
        </nav>

        @*         <div class="p-3">
            <img src="~/images/user-icon.png" class="user-icon" />
        </div> *@

        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>


    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - MSIS_4363_Group_Final_Project - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>