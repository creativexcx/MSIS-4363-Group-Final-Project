    ViewData["Title"] = "Home page";
}

<div>
    <div class="container">
        <h1 class="h1 text-center m-0" style="color: #FE5c00;">
            Welcome To Cowboys Careers
        </h1>
    </div>
</div>

<!-- Announcements -->
<div class="container d-flex justify-content-center mt-4">
    <div class="row w-100 justify-content-center">
        <div class="col-md-8">

            <div class="osu-box">
                <div class="osu-box-header"></div>
                <div class="osu-box-body">

                    <h2 class="mb-3 text-center">Announcements</h2>
                    <h4 class="card-title text-center">Featured Job of the Week</h4>

                    <h5 class="mt-3 text-center">Software Engineer – Paycom (Oklahoma City, OK)</h5>

                    <ul class="mt-2">
                        <li><b>Salary:</b> $82,000–$105,000</li>
                        <li><b>Experience:</b> 1–3 years</li>
                        <li><b>Employment Type:</b> Full Time</li>
                        <li><b>Degree Preferred:</b> CS, MIS, Software Engineering</li>
                    </ul>

                    <h5 class="mt-3">Summary</h5>
                    <p>
                        Paycom is seeking a junior–mid level Software Engineer to join the product
                        development team. This role focuses on building and maintaining enterprise HR software.
                    </p>

                    <h5 class="mt-3">Why it’s Featured</h5>
                    <ul>
                        <li>OSU alumni–friendly company</li>
                        <li>Clear advancement path</li>
                        <li>Strong mentorship program</li>
                        <li>$5,000 signing bonus</li>
                    </ul>

                    <div class="quick-links mt-4 text-center">
                        🔍 <a href="#">Search Jobs</a> |
                        🎓 <a href="#">Career Resources</a> |
                        📅 <a href="#">Career Events Calendar</a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>




